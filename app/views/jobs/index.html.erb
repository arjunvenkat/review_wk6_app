<h1>Jobs</h1>

<p><%= link_to 'Add a New Job', new_job_url %></p>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Homeowner</th>
      <th>Contractor</th>
      <th>Description</th>
      <th>Appointment date</th>
      <th>Status</th>
      <th>Address</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @jobs.each do |job| %>
    <tr>
      <td><%= job.category_id %></td>
      <td><%= job.homeowner_id %></td>
      <td><%= job.contractor_id %></td>
      <td><%= job.description %></td>
      <td><%= job.appointment_date %></td>
      <td><%= job.status %></td>
      <td><%= job.address %></td>
  
      <td><%= link_to 'Show', job_url(job) %></td>
      <td><%= link_to 'Edit', edit_job_url(job) %></td>
      <td><%= link_to 'Destroy', job_url(job), method: 'delete', data: { confirm: "Do you really want to delete this job?" } %></td>

    </tr>
  <% end %>
  </tbody>
</table>

